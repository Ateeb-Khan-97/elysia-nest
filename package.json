{
	"name": "elysia-nest",
	"main": "src/index.ts",
	"module": "src/index.ts",
	"type": "module",
	"private": true,
	"scripts": {
		"dev": "bun --watch src/main.ts",
		"build": "rm -rf dist && bun build --compile --minify-whitespace --minify-syntax --target bun --outfile dist/server src/main.ts",
		"email": "email dev --dir src/emails",
		"prisma:generate": "bunx prisma generate",
		"prisma:migrate": "bunx prisma migrate dev",
		"prisma:studio": "bunx prisma studio",
		"format": "biome format --write",
		"lint": "biome lint ./src"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.3.13",
		"@react-email/preview-server": "^5.2.7",
		"@types/bun": "latest",
		"@types/nodemailer": "^7.0.9",
		"@types/react-dom": "^19.2.3",
		"prisma": "^7.3.0",
		"react-email": "^5.2.7"
	},
	"peerDependencies": {
		"typescript": "^5"
	},
	"dependencies": {
		"@elysiajs/openapi": "^1.4.0",
		"@prisma/adapter-pg": "^7.3.0",
		"@prisma/client": "^7.3.0",
		"@react-email/components": "^1.0.7",
		"elysia": "^1.4.22",
		"jose": "^6.0.0",
		"nodemailer": "^8.0.0",
		"pg": "^8.18.0",
		"react": "^19.2.4",
		"react-dom": "^19.2.4",
		"reflect-metadata": "^0.2.2",
		"zod": "^4.3.6"
	}
}
